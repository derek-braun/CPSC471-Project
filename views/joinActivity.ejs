<div style="margin-left:15px;">
    <h1><%=activity.Title%></h1>
    <h4>Description: <%=activity.Description%></h4>
</div><br>

<div class="col-xs-4" style="background-color:#EEEEEE; border-radius:10px; margin-left:10px;">
    <h5>Activity Creator: <%=activity.Username%></h5>
    <h5>Start Time: <%=activity.StartTime%></h5>
    <h5>Duration: <%=activity.Duration%>h</h5>
    <h5>Topic: <%=activity.Interest%></h5> <br>
    <%if(participant == false){%>
    <form method="POST" action="/joinActivity/<%=activity.ActivityId%>">
        <%if(user != activity.Username){%>
        <button type="submit" class="btn btn-primary">Join Activity</button>
        <%}%>
        <a href="/search" class="btn btn-danger" style="margin-left:10px">Cancel</a>
    </form>
    <%} else{%>
    <form method="POST" action="/leaveActivity/<%=activity.ActivityId%>">
        <%if(user != activity.Username){%>
        <button type="submit" class="btn btn-primary">Leave Activity</button>
        <%}%>
        <a href="/search" class="btn btn-danger" style="margin-left:10px">Cancel</a>
    </form>
    <%}%>
</div>